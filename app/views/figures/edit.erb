<form method="POST" action="figures/<%=@figure.id%>">
<input id="hidden" type="hidden" name="_method" value="patch">
<h1> Create a new Figure </h1>
  <input type="text" name="figure[name]" id="figure_name">

    <%@landmarks.each do |landmark|%>
    <label> <%= landmark.name %> </label>
  <input type="checkbox" id="landmark_<%=landmark.id%>" name="figure[landmark_ids][]" value="<%=landmark.id%>">
  <%end%>

  <%@titles.each do |title|%>
  <label><%=title.name%></label>
  <input type="checkbox" id="title_<%=title.id%>" name="figure[title_ids][]" value="<%=title.id%>">
  <%end%>

  New Landmark
  <input type="text" name="landmark[name]" id="new_landmark">
  <input type="text" name="landmark[year_completed]">
  New Title
  <input type="text" name="title[name]" id="new_title">

  <input type="submit" value="Create New Figure">
</form>
